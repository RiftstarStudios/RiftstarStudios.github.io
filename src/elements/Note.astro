---
interface Props {
	title: string;
    date: string;
    datatime: string;
    game: string;
}

const { title, date, datatime, game } = Astro.props;
---

<article class="flex max-w-xl flex-col items-start justify-between">
    <div class="flex items-center gap-x-4 text-xs">
        <time datetime={datatime} class="text-white/80">{date}</time>
        <a href="#" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-white bg-white/5 ring-1 ring-white/10">{game}</a>
    </div>
    <div class="group relative">
        <h3 class="mt-3 text-lg/6 font-semibold text-white group-hover:text-white/80">
            <a href="#">
            <span class="absolute inset-0"></span>
            {title}
            </a>
        </h3>
        <p class="mt-4.5 line-clamp-3 text-sm/6 text-white/60"><slot /></p>
    </div>
</article>